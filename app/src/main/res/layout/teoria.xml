<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tituloTeoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teoría básica"
        android:textColor="@color/md_blue_900"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />


    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Siguiente"
        android:onClick="siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Cerrar"
        android:visibility="gone"
        android:onClick="cerrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:divider="@drawable/divisor_botones_tutorial"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="middle"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloTeoria"
        app:layout_constraintVertical_bias="0.120000005">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota: sonido que realiza una frencuencia determinada"
            android:textColor="@color/md_blue_900" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"            android:text="La distancia entre notas básicas es de 1 grado \n \nLa distancia entre un sostenido/bemol y una nota \nes de 1/2 grado"
            android:textColor="@color/md_blue_700" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nIntervalo: distancia entre dos notas. Pueden ser:"
            android:textColor="@color/md_blue_900" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:text="Existen 12 notas distintas que se repiten en ciclo\n\nCada 12 notas consecutivas componen una escala"
            android:textColor="@color/md_blue_700" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nOctava: intervalo de ocho grados entre dos notas "
            android:textColor="@color/md_blue_900" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:text="Ascendentes:  el segundo tono es más agudo \n\nDescendentes: el segundo tono es más grave"
            android:textColor="@color/md_blue_700" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nAcorde: conjunto de dos o más notas sonando a la vez. "
            android:textColor="@color/md_blue_900"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:text="Cada acorde tiene una distancia asignada entre notas \n\nSe forman aplicando esa distancia a una nota inicial"
            android:textColor="@color/md_blue_700"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nCompás: entidad de medida empleada para dividir el tiempo de una composición musical. Se indica en forma de fracción"
            android:textColor="@color/md_blue_900"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:text="El numerador indica el número de pulsos en los que se divide cada compás\n\nEl denominador indica la duración de cada pulso \n(1 = redonda, 2 = blanca, 4 = negra...) \n\nEjemplo: un compás 4/4 indica que cada compás se divide en 4 y cada división dura una negra"
            android:textColor="@color/md_blue_700"
            android:visibility="gone" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>