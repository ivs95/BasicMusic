<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tituloAdivinarAcorde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Elige la opciÃ³n correcta"
        android:textSize="24sp"
        android:textColor="@color/md_blue_900"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/retroceder_niveles_adivinar_acordes"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="volverAtrasAcordes"
        android:text="Volver a seleccionar nivel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/comprobarAcordes"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:onClick="comprobarAcordes"
        android:text="Comprobar resultado"
        app:layout_constraintBottom_toTopOf="@+id/retroceder_niveles_adivinar_acordes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewAcordes"
        android:layout_width="385dp"
        android:layout_height="430dp"
        app:layout_constraintBottom_toTopOf="@+id/comprobarAcordes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloAdivinarAcorde"
        app:layout_constraintVertical_bias="0.153">

        <LinearLayout
            android:id="@+id/opcionesAcordes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/botonReproduceAdivinarAcorde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:onClick="reproducirAcorde"
        android:text="Acorde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>