<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/popup_imitaraudio"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/md_blue_50">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/popup_imitaraudio_ayuda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUTORIAL"
                android:textColor="@color/md_purple_800"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/popup_imitaraudio_tituloImitar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel "

                android:textColor="@color/md_blue_900"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.100000024" />

            <Button
                android:id="@+id/popup_imitaraudio_button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comparar audio"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.85" />

            <Button
                android:id="@+id/popup_imitaraudio_botonGrabar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grabar muestra"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/popup_imitaraudio_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reproducir audio"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35" />

            <TextView
                android:id="@+id/popup_imitaraudio_textoFrecuencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:text="Resultado: LA4  99,45786%"
                android:gravity="center"
                android:textColor="@color/md_blue_900"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.7" />

            <TextView
                android:id="@+id/popup_imitaraudio_mensaje1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="\n¡Bienvenida a imitar audio!"
                android:textColor="@color/md_blue_900"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
            android:id="@+id/popup_imitaraudio_mensaje14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Aquí te mostramos tus intentos y reproducciones restantes en el nivel."
            android:textColor="@color/md_blue_900"
            android:textSize="18sp"
            android:visibility="visible"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/popup_imitaraudio_button2" />

            <TextView
                android:id="@+id/popup_imitaraudio_mensaje12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El botón Reproducir audio, reproduce la nota que debes imitar con tu preciosa voz."
                android:gravity="center"
                android:textColor="@color/md_blue_900"
                android:textSize="18sp"
                android:visibility="visible"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popup_imitaraudio_button2"
                app:layout_constraintVertical_bias="0.7" />
            <TextView
                android:id="@+id/popup_imitaraudio_mensaje13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El botón Grabar Muestra, tras un breves segundos grabará tu voz y analizará la nota que estás emitiendo.\n Intenta que no haya mucho ruido de fondo para una mayor exactitud."
                android:gravity="center"
                android:textColor="@color/md_blue_900"
                android:textSize="18sp"
                android:visibility="visible"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popup_imitaraudio_botonGrabar"
                app:layout_constraintVertical_bias="0.7" />

            <TextView
                android:id="@+id/popup_imitaraudio_mensaje2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Se mostrará el resultado de tu grabación con la nota que has emitido y lo cerca que estás de la afinación perfecta de esa misma nota.\n Aunque recuerda que la nota puede no ser la nota que te pedimos"
                android:textColor="@color/md_blue_900"
                android:textSize="18sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@id/popup_imitaraudio_textoFrecuencia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8" />

            <TextView
                android:id="@+id/popup_imitaraudio_mensaje3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Por último, cuando estés seguro de que la nota que has emitido es la nota que te pedimos pulsa el botón Comparar Audio y te coloreamos el resultado en verde si está bien o en rojo si está mal.\n\n ¡Entrena esa maravillosa voz!"
                android:textColor="@color/md_blue_900"
                android:textSize="18sp"
                android:visibility="invisible"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toTopOf="@id/popup_imitaraudio_button4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8" />

            <Button
                android:id="@+id/popup_imitaraudio_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="prev"
                android:visibility="gone"
                android:text="Anterior"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/popup_imitaraudio_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="next"
                android:text="Siguiente"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/popup_imitaraudio_textViewRestantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_blue_900"
                android:textSize="15sp"
                android:text="Reproducciones restantes: 3\n Intentos restante: 3"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/popup_imitaraudio_button2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popup_imitaraudio_tituloImitar"
                app:layout_constraintVertical_bias="0.23000002" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>


