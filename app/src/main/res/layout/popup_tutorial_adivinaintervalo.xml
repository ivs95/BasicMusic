<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:gravity="center"
    android:id="@+id/popup_adivinaIntervalo"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/md_blue_50">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/popup_adivinaintervalo_ayuda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUTORIAL"
                android:textColor="@color/md_purple_800"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/popup_adivinaintervalo_tituloSeleccionar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elige el intervalo correcto"
                android:textColor="@color/md_blue_900"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05" />

            <LinearLayout
                android:id="@+id/popup_adivinaintervalo_scrollView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="150dp"
                android:fillViewport="true"
                android:gravity="center"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/popup_adivinaintervalo_linearLayout8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popup_adivinaintervalo_linearLayout2"
                android:orientation="vertical">

                <Button
                    android:id="@+id/popup_adivinaintervalo_button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cuarta Justa Ascendente" />

                <Button
                    android:id="@+id/popup_adivinaintervalo_button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tercera Mayor Descendente" />

                <Button
                    android:id="@+id/popup_adivinaintervalo_button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Segunda Mayor Descendente" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/popup_adivinaintervalo_linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:divider="@drawable/divisor_botones_menu"
                android:orientation="vertical"
                android:showDividers="middle"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.85">

                <Button
                    android:id="@+id/popup_adivinaintervalo_comprobar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comprobar resultado" />

                <Button
                    android:id="@+id/popup_adivinaintervalo_retroceder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Volver a seleccionar nivel" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/popup_adivinaintervalo_linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"


                app:layout_constraintBottom_toTopOf="@+id/popup_adivinaintervalo_linearLayout8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popup_adivinaintervalo_tituloSeleccionar"
                app:layout_constraintVertical_bias="0.033">

                <Button
                    android:id="@+id/popup_adivinaintervalo_botonNota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intervalo" />

                <Button
                    android:id="@+id/popup_adivinaintervalo_botonReferencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Referencia" />

            </LinearLayout>

            <TextView
                android:id="@+id/popup_adivinaintervalo_mensaje1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="¡Bienvenido a Adivinar Intervalo!\n\n El botón Intervalo reproduce el intervalo que tienes que adivinar.\nEl botón Referencia reproducen una nota que te sirve de ayuda para adivinar el intervalo del nivel."
                android:textAlignment="center"
                android:textColor="@color/md_blue_900"
                android:textSize="18sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popup_adivinaintervalo_linearLayout2"
                app:layout_constraintVertical_bias="0.4" />

            <TextView
                android:id="@+id/popup_adivinaintervalo_mensaje2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estas son las opciones que te ofrecemos.\nDebes elegir qué tipo de intervalo es el que suena. Recuerda, solo hay una respuesta correcta."
                android:textColor="@color/md_blue_900"
                android:textAlignment="center"
                android:textSize="18sp"
                android:visibility="invisible"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@id/popup_adivinaintervalo_linearLayout8"
                app:layout_constraintTop_toBottomOf="@id/popup_adivinaintervalo_linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.9" />

            <TextView
                android:id="@+id/popup_adivinaintervalo_mensaje3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuando tengas claro que la opción que has marcado es la correcta pulsa el botón Comprobar Resultado.\n\n Siempre puedes volver a la pantalla de selección de nivel pulsando el botón Volver a Seleccionar Nivel.\n\n ¡Mucha suerte!"
                android:textColor="@color/md_blue_900"
                android:textAlignment="center"
                android:textSize="18sp"
                android:visibility="invisible"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toTopOf="@id/popup_adivinaintervalo_linearLayout8"
                app:layout_constraintTop_toBottomOf="@id/popup_adivinaintervalo_linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.9" />

            <Button
                android:id="@+id/popup_adivinaintervalo_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="prev"
                android:text="Anterior"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/popup_adivinaintervalo_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="next"
                android:text="Siguiente"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>


