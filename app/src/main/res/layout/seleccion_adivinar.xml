<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tituloModosImitar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Adivinar"
        android:textColor="@color/md_blue_900"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20" />

    <LinearLayout
        android:id="@+id/linearLayout17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:divider="@drawable/divisor_botones_menu"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonNotas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="modo"
                android:layout_weight="9"
                android:text="notas" />

            <ImageView
                android:id="@+id/imageViewNotas"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_weight="1" />
        </LinearLayout>



        <Button
            android:id="@+id/buttonRealizar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="modo"
            android:text="intervalos" />

        <Button
            android:id="@+id/buttonAcordes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="modo"
            android:text="acordes" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>